.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    background-color: #f8f9fa;
    padding: 20px;
}

.header {
    margin-bottom: 20px;
}

.title {
    font-size: 24px;
    font-weight: bold;
    color: #333;
}

.content {
    text-align: center;
    margin-bottom: 40px;
}

.description {
    font-size: 16px;
    color: #666;
}

.tips {
    font-size: 14px;
    color: #999;
    margin-top: 10px;
}

.start-button {
    background-color: #007aff;
    color: #ffffff;
    border: none;
    border-radius: 5px;
    padding: 10px 20px;
    font-size: 16px;
}
